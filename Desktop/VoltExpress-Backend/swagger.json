{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Volt Express Api",
    "description": "this is a Restful API provided for the client side of the Volt Express Application"
  },
  "tags": [
    {
      "name": "Auth",
      "description": "API for Authentication EndPoints in the system"
    },
    {
      "name": "Order",
      "description": "API for Order Managment in the system"
    },
    {
      "name": "Pickup",
      "description": "API for Pickup Managment in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logges User Into The System",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Login"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/LoginResponse"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Registers User Into The System According To Role",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Register"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseMessage"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "409": {
            "description": "Email Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/userRoles": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Fetches User Roles",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/userRoles"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/order/getOrdersAdmin": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Fetches Orders With Admin Access",
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string"
            },
            "description": "Optional Status Parameter For Query"
          },
          {
            "in": "query",
            "name": "area",
            "schema": {
              "type": "string"
            },
            "description": "Optional Area Parameter For Query"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/AdminOrders"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/order/assignOrder": {
      "patch": {
        "tags": [
          "Order"
        ],
        "summary": "Assigns Current Logged In Courrier To Order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/assignOrder"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseMessage"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/order/makeOrder": {
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "Creates New Order For Client",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/CreateOrder"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseMessage"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/order/viewClientOrders": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Fetches Orders With Client Access",
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string"
            },
            "description": "Optional Status Parameter For Query"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ClientOrders"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "ResponseMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "LoginResponse": {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "properties": {
            "accessToken": {
              "type": "string"
            },
            "refreshToken": {
              "type": "string"
            },
            "userRole": {
              "type": "string"
            }
          }
        }
      }
    },
    "Register": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        },
        "name": {
          "type": "string"
        },
        "phoneNumber1": {
          "type": "string"
        },
        "phoneNumber2": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "userRoles": {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "properties": {
            "userRoles": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "AdminOrders": {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "properties": {
            "orders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "shipmentType": {
                    "type": "string"
                  },
                  "shipperName": {
                    "type": "string"
                  },
                  "recieverDetails": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "phoneNumber": {
                        "type": "string"
                      },
                      "address": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "area": {
                        "type": "string"
                      }
                    }
                  },
                  "allowOpen": {
                    "type": "boolean"
                  },
                  "description": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "userId": {
                    "type": "number"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "ClientOrders": {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "properties": {
            "orders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "shipmentType": {
                    "type": "string"
                  },
                  "shipperName": {
                    "type": "string"
                  },
                  "recieverDetails": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "phoneNumber": {
                        "type": "string"
                      },
                      "address": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "area": {
                        "type": "string"
                      }
                    }
                  },
                  "allowOpen": {
                    "type": "boolean"
                  },
                  "description": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "assignOrder": {
      "type": "object",
      "properties": {
        "orderId": {
          "type": "string"
        }
      }
    },
    "CreateOrder": {
      "type": "object",
      "properties": {
        "shipmentType": {
          "type": "string"
        },
        "shipperName": {
          "type": "string"
        },
        "recieverDetails": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "phoneNumber": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "area": {
              "type": "string"
            }
          }
        },
        "allowOpen": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      }
    }
  }
}